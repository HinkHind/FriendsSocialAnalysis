<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>


    <package name="controller" namespace="/" extends="struts-default">
        <action name="signUp" class = "controller.SignUp" method = "signUp">
            <result >
                newFriend.jsp
            </result>
        </action>
        
        <action name="signIn" class = "controller.SignIn" method = "signIn">
            <result name = "login" type = "redirect">
                enterIndexInitially.action
            </result>
            <result name = "error">
            	signIn.jsp
            </result>
        </action>
        
        <action name = "enterIndex" class = "controller.EnterIndex" method = "enterIndex">
        	<result>
        		index.jsp
        	</result>
        </action>
        <action name = "enterControl" class = "controller.ManageFriend" method = "loadControlData">
        	<result>
        		control.jsp
        	</result>
        
        </action>
        
        <action name = "addWeiboUrl" class = "controller.ManageFriend" method = "addWeiboUrl">
        	<result type = "redirectAction">
            	<param name="actionName">enterControl</param>
            </result>
        </action>
        
        <action name = "removeWeiboUrl" class = "controller.ManageFriend" method = "removeWeiboUrl">
        	<result type = "redirectAction">
            	<param name="actionName">enterControl</param>
            </result>
        </action>
        
        <action name="addFriend" class = "controller.ManageFriend" method = "addFriend">
            <result type = "redirectAction">
            	<param name="actionName">enterControl</param>
            </result>
        </action>
        
        <action name = "enterIndexInitially" class = "controller.EnterIndex" method = "enterIndexInitially">
        	<result>
        		index.jsp
        	</result>
        </action>
        
        <action name = "enterIndexWithSelectedFriend" class = "controller.EnterIndex" method = "enterIndexWithSelectedFriend">
        	<result>
        		index.jsp
        	</result>
        </action>
        
        <action name = "enterIndexWithSelectedPlatform" class = "controller.EnterIndex" method = "enterIndexWithSelectedPlatform">
        	<result>
        		index.jsp
        	</result>
        </action>
        
    </package>

</struts>
